# Ghostty Configuration
# https://ghostty.org/docs/config
# Machine-specific settings (font, size, theme) go in ~/.local/dotfiles/ghostty.local

# ------------------------------------------------------------------------------
# Theme
# ------------------------------------------------------------------------------

# Omarchy theme integration (Linux) - only loads if file exists
config-file = ?"~/.config/omarchy/current/theme/ghostty.conf"

# Override with specific theme (uncomment to use)
# theme = "Catppuccin Mocha"

# ------------------------------------------------------------------------------
# Font (override in ~/.local/dotfiles/ghostty.local)
# ------------------------------------------------------------------------------

# Default font - override in local config for machine-specific preference
# macOS default: MartianMono Nerd Font, size 14
# Linux default: JetBrainsMono Nerd Font, size 9
font-family = "JetBrainsMono Nerd Font"
font-size = 12

# ------------------------------------------------------------------------------
# Window
# ------------------------------------------------------------------------------

window-padding-x = 12
window-padding-y = 12
confirm-close-surface = false

# ------------------------------------------------------------------------------
# Cursor
# ------------------------------------------------------------------------------

cursor-style = block
cursor-style-blink = false

# ------------------------------------------------------------------------------
# Shell Integration
# ------------------------------------------------------------------------------

shell-integration = zsh
shell-integration-features = no-cursor,ssh-env

# ------------------------------------------------------------------------------
# Keybindings - macOS (Cmd/Super key)
# Note: Cmd+C/V are Ghostty defaults on macOS - don't override them
# Comment out this section on Linux
# ------------------------------------------------------------------------------

keybind = super+t=new_tab
keybind = super+w=close_surface
keybind = super+n=new_window

# Tab navigation
keybind = super+1=goto_tab:1
keybind = super+2=goto_tab:2
keybind = super+3=goto_tab:3
keybind = super+4=goto_tab:4
keybind = super+5=goto_tab:5

# Split panes
keybind = super+d=new_split:right
keybind = super+shift+d=new_split:down

# ------------------------------------------------------------------------------
# Keybindings - Linux (uncomment on Linux, comment macOS section above)
# ------------------------------------------------------------------------------

# keybind = shift+insert=paste_from_clipboard
# keybind = control+insert=copy_to_clipboard
# keybind = super+control+shift+alt+arrow_down=resize_split:down,100
# keybind = super+control+shift+alt+arrow_up=resize_split:up,100
# keybind = super+control+shift+alt+arrow_left=resize_split:left,100
# keybind = super+control+shift+alt+arrow_right=resize_split:right,100

# ------------------------------------------------------------------------------
# Mouse
# ------------------------------------------------------------------------------

mouse-scroll-multiplier = 1.0

# ------------------------------------------------------------------------------
# Local overrides (font, size, theme preferences)
# ------------------------------------------------------------------------------

config-file = ?"~/.local/dotfiles/ghostty.local"
